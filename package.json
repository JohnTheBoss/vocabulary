{
  "name": "frontend-build",
  "engines": {
    "node": "14",
    "yarn": "1.22.4"
  },
  "scripts": {
    "build": "yarn --cwd frontend install && npm install && yarn --cwd frontend build",
    "deploy": "cp -a frontend/dist/. backend/public/frontend",
    "heroku-postbuild": "yarn build && yarn deploy"
  }
}
